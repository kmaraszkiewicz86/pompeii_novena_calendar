<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PompeiiNovenaCalendar.Presentation.Views.DaysListPage"
             Title="DaysListPage">
    <CollectionView ItemsSource="{Binding Days}">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <StackLayout Padding="10" >
                    <Label Text="{Binding Date, StringFormat='{0:dddd, dd MMMM}'}" FontSize="Medium" />
                    <StackLayout Orientation="Horizontal">
                        <CheckBox IsChecked="{Binding MysteriesStatus[0]}" IsEnabled="{Binding CanEdit}" />
                        <CheckBox IsChecked="{Binding MysteriesStatus[1]}" IsEnabled="{Binding CanEdit}" />
                        <CheckBox IsChecked="{Binding MysteriesStatus[2]}" IsEnabled="{Binding CanEdit}" />
                        <CheckBox IsChecked="{Binding MysteriesStatus[3]}" IsEnabled="{Binding CanEdit}" />
                    </StackLayout>
                </StackLayout>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>