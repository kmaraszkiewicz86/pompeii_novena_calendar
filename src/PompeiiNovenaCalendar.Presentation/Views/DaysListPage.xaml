<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PompeiiNovenaCalendar.Presentation.Views.DaysListPage"
             Title="DaysListPage">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Pozostało 50 dni"
                     Order="Primary"
                     Priority="0"
                     />
    </ContentPage.ToolbarItems>
    <CollectionView ItemsSource="{Binding Days}">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <StackLayout Padding="10" >
                    <StackLayout Orientation="Horizontal" Margin="30, 10" >
                        <Label Text="{Binding Day, StringFormat='{0:dddd, dd MMMM}'}" FontSize="Medium" TextColor="White" HorizontalTextAlignment="Center" Margin="20, 0" />
                        <Label Text="{Binding StatusName}" FontSize="Medium" TextColor="White" HorizontalTextAlignment="End" />
                    </StackLayout>
                    <StackLayout>
                        <StackLayout Orientation="Horizontal" >
                            <Label Text="Tajemnice radosne " FontSize="Medium" TextColor="White" />
                            <CheckBox IsChecked="{Binding MysteriesStatus[0]}" IsEnabled="{Binding CanEdit}" />
                        </StackLayout>
                        <StackLayout Orientation="Horizontal" >
                            <Label Text="Tajemnice bolesne " FontSize="Medium" TextColor="White" />
                            <CheckBox IsChecked="{Binding MysteriesStatus[0]}" IsEnabled="{Binding CanEdit}" />
                        </StackLayout>
                        <StackLayout Orientation="Horizontal" >
                            <Label Text="Tajemnice chwalebne " FontSize="Medium" TextColor="White" />
                            <CheckBox IsChecked="{Binding MysteriesStatus[0]}" IsEnabled="{Binding CanEdit}" />
                        </StackLayout>
                        <StackLayout Orientation="Horizontal" >
                            <Label Text="Tajemnice światła (opcjonalne) " FontSize="Medium" TextColor="White" />
                            <CheckBox IsChecked="{Binding MysteriesStatus[0]}" IsEnabled="{Binding CanEdit}" />
                        </StackLayout>
                    </StackLayout>
                </StackLayout>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>