<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PompeiiNovenaCalendar.Presentation.Views.StartPage"
             xmlns:behaviors="clr-namespace:PompeiiNovenaCalendar.Presentation.Behaviors"
             Title="StartPage">

    <ContentPage.Behaviors>
        <behaviors:EventToCommandBehavior EventName="Loaded" Command="{Binding PageLoadedCommand}" />
    </ContentPage.Behaviors>

    <VerticalStackLayout Padding="20">
        <Label Text="Wybierz datę rozpoczęcia nowenny:" FontSize="Medium"/>
        <DatePicker Date="{Binding SelectedDate}" />
        <Button Text="Dalej" Command="{Binding StartCommand}" />
    </VerticalStackLayout>
</ContentPage>
