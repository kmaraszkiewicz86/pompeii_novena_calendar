    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:PompeiiNovenaCalendar"
    xmlns:views="clr-namespace:PompeiiNovenaCalendar.Presentation.Views;assembly=PompeiiNovenaCalendar.Presentation"
    Shell.FlyoutBehavior="Disabled"
    Title="PompeiiNovenaCalendar">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate views:StartPage}"
        Route="MainPage" />

    <ShellContent
        Title="DaysListPage"
        ContentTemplate="{DataTemplate views:DaysListPage}"
        Route="DaysListPage" />

</Shell>
